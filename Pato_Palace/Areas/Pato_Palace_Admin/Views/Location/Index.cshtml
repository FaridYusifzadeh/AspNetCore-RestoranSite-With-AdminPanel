@model IEnumerable<Location>
@{
    ViewData["Title"] = "Index";
}

<div class="row m-t-30">
    <div class="col-md-12">
        <!-- DATA TABLE-->
        <div class="table-responsive m-b-40">
            <h1>Menu_Content</h1>
            <table class="table table-borderless table-data3">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Title</th>
                        <th>SubTitle</th>
                        <th>Description</th>
                        <th>TitleCode</th>
                        <th>SubTitleCode</th>
                        <th>
                           
                                <a asp-action="Create" class="btn btn-primary"> <i class="fas fa-pencil-alt"></i>  Create</a>
                            
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }

                    @foreach (var location in Model)
                    {
                    <tr>
                        <td>@count</td>
                        <td>@location.Title</td>
                        <td>@location.SubTitle</td>
                        <td>@(location.Description.Substring(0, location.Description.Length / 2) + "...")</td>
                        <td>@location.TitleCode</td>
                        <td>@(location.SubTitleCode.Substring(0, location.SubTitleCode.Length / 2) + "...")</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@location.Id" class="btn btn-success">
                                <i class=" fas fa-eye" style="color:white"></i>
                            </a>
                            <a asp-action="Update" asp-route-id="@location.Id" class="btn btn-warning">
                                <i class="fas fa-edit" style="color:white"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-danger">
                                <i class="far fa-trash-alt" style="color:white"></i>
                            </a>

                        </td>
                    </tr>
                        count++;
                    }


                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE-->
    </div>
</div>

